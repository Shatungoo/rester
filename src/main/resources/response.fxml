<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>


<StackPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.helldaisy.controllers.ResponseController">
   <children>
      <TabPane fx:id="response" prefHeight="262.0" prefWidth="436.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab closable="false" text="Body">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="responseField" editable="false" layoutX="22.0" layoutY="8.0" prefHeight="233.0" prefWidth="670.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab closable="false" text="Headers">
               <content>
                  <StackPane>
                     <children>
                        <TableView fx:id="responseHeadersTable" editable="true" prefHeight="206.0" prefWidth="474.0">
                           <columns>
                              <TableColumn fx:id="responseName" prefWidth="231.0" text="Name" />
                              <TableColumn fx:id="responseValue" prefWidth="290.0" text="Value" />
                           </columns>
                        </TableView>
                     </children>
                  </StackPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <HBox alignment="TOP_RIGHT" StackPane.alignment="TOP_RIGHT">
         <children>
            <Group>
               <children>
                  <Label alignment="CENTER" text="Code: " />
                  <Label fx:id="status" alignment="CENTER" layoutX="34.0" />
                  <Label alignment="CENTER" layoutX="54.0" text="     Response time: " />
                  <Label fx:id="responseTime" alignment="CENTER" layoutX="154.0" />
               </children>
            </Group>
         </children>
         <StackPane.margin>
            <Insets right="10.0" top="10.0" />
         </StackPane.margin>
      </HBox>
   </children>
</StackPane>
